{
  "name": "Graderoom",
  "description": "Graderoom extension",
  "version": "1.6.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "icon.png",
    "default_state": "disabled"
  },
  "host_permissions": [
    "https://powerschool.bcp.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": [
      "https://*.graderoom.me/*"
    ]
  },
  "permissions": [
    "offscreen",
    "declarativeNetRequest"
  ]
}
