{
  "name": "Graderoom",
  "description": "Graderoom extension",
  "version": "1.2",
  "manifest_version": 3,
  "action": {
    "default_icon": "icons/icon.png",
    "default_state": "disabled"
  },
  "host_permissions": [
    "https://powerschool.bcp.org/*",
    "https://adfs.bcp.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": [
      "https://*.graderoom.me/",
      "http://localhost:5996/",
      "http://localhost:5998/"
    ]
  },
  "permissions": ["offscreen", "declarativeNetRequest"]
}
